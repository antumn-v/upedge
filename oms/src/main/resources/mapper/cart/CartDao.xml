    <update id="updatePriceByVariantId">
        update cart
        set price = #{price}
        where variant_id = #{variantId}
          and state = '0'
    </update>

    <update id="updateWeightByVariantId">
        update cart
        set variant_weight = #{weight}
        where variant_id = #{variantId}
          and state = '0'
    </update>

    <update id="updateVolumeByVariantId">
        update cart
        set variant_volume = #{volume}
        where variant_id = #{variantId}
          and state = '0'
    </update>

    <select id="selectByIdsAndType" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from cart
        where
        1=1
        <if test="ids == null">
            and 1 != 1
        </if>
        <if test="ids != null">
            and id in
            <foreach collection="ids" item="id" open="(" separator="," close=")">
                #{id}
            </foreach>
        </if>
        and `state` = '0'
        and cart_type = #{cartType};
        and customer_id = #{customerId}
    </select>

    <update id="updateStateByIds">
        update cart
        set state = #{state}
        where id in
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
        and state = '0'
    </update>

