            </if>
            <if test="name != null" >
              `name`
            </if>
            <if test="desc != null" >
              `desc`
            </if>
            <if test="state != null" >
              state
            </if>
            <if test="createTime != null" >
              create_time
            </if>
            <if test="updateTime != null" >
              update_time
            </if>
            <if test="saiheId != null" >
              saihe_id
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null" >
                #{id}
            </if>
            <if test="name != null" >
                #{name}
            </if>
