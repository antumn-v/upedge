    <insert id="insertByBatch" parameterType="java.util.List">
        insert into shipping_template
        <trim prefix="(" suffix=")" suffixOverrides=",">
           id,
           `name`,
           `desc`,
           state,
           create_time,
           update_time,
            saihe_id
        </trim>
        values
        <foreach collection="list" item="item" index="index" separator=",">
            <trim prefix="(" suffix=")" suffixOverrides=",">
               #{item.id},
               #{item.name},
               #{item.desc},
               #{item.state},
               #{item.createTime},
               #{item.updateTime},
               #{item.saiheId}
            </trim>
        </foreach>
    </insert>

    <sql id="Query_Condition">
        <if test="t != null">
            where
            <trim prefix=" " suffix=" " suffixOverrides=" and ">
                1 = 1 and
                    <if test="t.id != null">
                        id = #{t.id} and
                    </if>
                    <if test="t.name != null">
                      <!--  `name` = #{t.name} and -->
                        `name` Like CONCAT('%',#{t.name},'%')  and
                    </if>
                    <if test="t.desc != null">
                        `desc` = #{t.desc} and
                    </if>
                    <if test="t.state != null">
                        state = #{t.state} and
                    </if>
                    <if test="t.createTime != null">
                        create_time = #{t.createTime} and
                    </if>
                    <if test="t.updateTime != null">
                        update_time = #{t.updateTime} and
                    </if>
            </trim>
        </if>
    </sql>

    <select id="select" parameterType="com.upedge.common.base.Page" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from shipping_template
        <include refid="Query_Condition"/>
        order by update_time desc
        <if test="pageNum != null and pageSize != null">
            limit #{fromNum,jdbcType=INTEGER},#{pageSize,jdbcType=INTEGER}
        </if>
    </select>

    <select id="count" parameterType="com.upedge.common.base.Page" resultType="java.lang.Long">
        select
        count(1)
        from shipping_template
        <include refid="Query_Condition"/>
    </select>

    <select id="allUseShippingTemplate"  resultMap="BaseResultMap">
        select
        `id`,`name`
        from shipping_template where state=1
    </select>

    <update id="updateShippingTemplateState">
        update shipping_template set state=#{state} where id=#{id}
    </update>

